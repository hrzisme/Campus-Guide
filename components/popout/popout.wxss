/* components/popout/popout.wxss */
.popout {
  position: fixed;
  top: 20%;
  left: 10%;
  width: 80%;
  height: 60%;
  box-sizing: border-box;
  border-radius: 30rpx;
  padding: 5%;
  background: #fff;
  animation: out ease 1s;
  z-index: 99;
}

.title {
  margin-top: 5%;
  font-size: 60rpx;
  color: #5084c3;
}

.content {
  margin-top: 5%;
  font-size: 50rpx;
  color: #5084c3;
}

.input {
  width: 100%;
  height: 70rpx;
  margin-top: 2%;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #f5f6f9;
  border: solid 1rpx #f5f6f9;
  padding: 2%;
}

.finish {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 10%;
  margin-left: -6%;
  box-sizing: border-box;
  border-radius: 0 0 30rpx 30rpx;
  background: #5084c3;
}
.ok{
  position: relative;
  left: 50%;
  top: 50%;
  margin-left: -30rpx;
  margin-top: -30rpx;
  width: 60rpx;
  height: 60rpx;
}
.back{
  position: fixed;
  display: block;
  background: #000000;
  margin-top: -50%;
  opacity: 0.2;
  z-index: 98;
}
@keyframes out {
  0%{
    transform: scale(0);
    opacity: 0;
  }
  100%{
    transform: scale(1);
    opacity: 1;
  }
}
@keyframes fade{
  0%{
    transform: scale(1);
    opacity: 1;
  }
  100%{
    transform: scale(0);
    opacity: 0;
  }
}