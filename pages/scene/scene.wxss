/* pages/scene/scene.wxss */

page {
  width: 100%;
  height: 100%;
  background: #eee;
}

.photo {
  position: absolute;
  width: 100%;
  height: 100%;
}

.download {
  position: fixed;
  top: 8%;
  right: 5%;
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  z-index: 2;
}

.download:hover {
  animation: rot ease 1s;
}

.downloadImg {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -30rpx;
}

.place {
  position: fixed;
  bottom: 4%;
  left: 5%;
  color: #fff;
  font-size: 100rpx;
}

@keyframes rot {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(90deg);
  }
}
